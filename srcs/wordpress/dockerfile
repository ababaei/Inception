FROM debian:buster

RUN	apt-get update && apt-get -y install \
	php-fpm php php-cgi php-mysqli php-pear php-mbstring php-gettext libapache2-mod-php php-common php-phpseclib php-mysql \
	wget

vvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvv FAIRE UN SCRIPT BASH POUR CETTE INSTALL EN ENTRYPOINT DU DOCKERFILE vvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvvv
RUN wget https://wordpress.org/latest.tar.gz
RUN tar xvf latest.tar.gz --strip-components 1 -C /var/www/localhost/wordpress
RUN rm latest.tar.gz
RUN chown -R www-data:www-data /var/www/localhost/wordpress
RUN chmod -R 755 /var/www/localhost/*


COPY nginx.conf /etc/nginx/nginx.conf
COPY wp-config.php /var/www/localhost/wordpress/wp-config.php

CMD ["nginx", "-g", "daemon off;"]
