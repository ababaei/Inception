FROM debian:buster

RUN	apt-get update && apt-get -y install \
	php7.3 php7.3-fpm php7.3-mysql \
	curl \
	mariadb-client

RUN mkdir -p /var/www/html
RUN chmod -R 755 /var/www/html

COPY www.conf /var/www/html
COPY init.sh /root/init.sh

EXPOSE 9000

#CMD [ "bash", "/root/init.sh" ]
CMD [ "php7.3-fpm", "F" ]
